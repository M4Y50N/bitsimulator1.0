<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BitSimulator</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/css-apresentation.css" />
</head>

<body>
    <nav class="navbar navbar-dark navbar-expand-lg fixed-top navbar-custom bg-black" id="navbar">
        <div class="container">
            <a class="navbar-brand" style="font-size: 1.2em" asp-controller="Home"
                asp-action="Index">BitSimulator</a><button data-toggle="collapse" class="navbar-toggler"
                data-target="#navbarResponsive">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" asp-controller="Home" asp-action="IndexInstrucoes">Instruções</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="py-5 bg-black">
        <div class="container">
            <div class="row">
                <div class="col-xl-4 ">
                    <p class="text-left text-white m-0 small" style="font-size: 15px;">Desenvolvedores: </p>
                    <p class="text-left text-white m-0 small">Adrian Devid Menezes Santos</p>
                    <p class="text-left text-white m-0 small">Dhiego Costa Araújo</p>
                    <p class="text-left text-white m-0 small">Diego Santos Sales Villela</p>
                    <p class="text-left text-white m-0 small">Mayson Petherson Reis Azevedo</p>
                    <p class="text-left text-white m-0 small">José Aprígio Carneiro Neto</p>

                </div>
            </div>
            <div class="row">
                <div style="width: 100%; height: 1px; background-color: white; opacity: .5;"></div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/index.js" asp-append-version="true"></script>
    <script src="~/js/dados.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
